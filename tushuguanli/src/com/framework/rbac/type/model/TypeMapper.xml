<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.rbac.type.dao.TypeDao">
<resultMap type="com.framework.rbac.type.model.Type"
		id="typeMap">
		<id property="id" column="id" javaType="java.lang.Integer"
			jdbcType="INTEGER" />
		<result property="typeName" column="type_name" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="status" column="status" javaType="java.lang.String"
			jdbcType="VARCHAR" />
	</resultMap>
	
	<select id="Query" resultMap="typeMap" parameterType="java.util.HashMap">
	SELECT
		*
	FROM
		type
	ORDER BY
		id
	DESC
	LIMIT 
	#{pager.offSet},#{pager.pageSize}
</select>
<select id="QueryAll" resultMap="typeMap" parameterType="java.util.HashMap">
	SELECT
		*
	FROM
		type
	<where>
		<if test="status!=null and status!=''">
			status=#{status}
		</if>
	</where>
	ORDER BY
		id
	DESC
</select>
<select id="queryOne" resultMap="typeMap">
	SELECT
		*
	FROM
		type
	<where>
		id=#{id}
	</where>
</select>
<select id="queryCount" resultType="int">
	SELECT
		COUNT(*)
	FROM
		type
</select>

<insert id="typeAdd">

	INSERT INTO
		type
	<trim prefix="(" suffix=")" suffixOverrides=",">
		<if test="typeName!=null and typeName!=''">
			type_name,
		</if>
		<if test="status!=null and status!=''">
			status,
		</if>
	</trim>
	VALUES
	<trim prefix="(" suffix=")" suffixOverrides=",">
		<if test="typeName!=null and typeName!=''">
			#{typeName},
		</if>
		<if test="status!=null and status!=''">
			#{status},
		</if>
	</trim>
	
</insert>

<delete id="informationDelete" parameterType="int">
		DELETE
		FROM
			type
		WHERE
			id=#{id}
</delete>

<update id="informationUpdate" parameterType="com.framework.rbac.type.model.Type">
		UPDATE
		type
		<set>
			<if test="typeName!=null and typeName!=''">
			type_name=#{typeName},
		</if>
		<if test="status!=null and status!=''">
			status=#{status},
		</if>
		</set>
		WHERE id=#{id}
</update>
</mapper>
