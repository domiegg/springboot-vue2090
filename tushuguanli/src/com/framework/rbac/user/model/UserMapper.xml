<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.framework.rbac.user.dao.UserDao">
	<resultMap type="com.framework.rbac.user.model.User"
		id="userMap">
		<id property="id" column="id" javaType="java.lang.Integer"
			jdbcType="INTEGER" />
		<result property="account" column="account" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="password" column="password" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="email" column="email" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="tel" column="tel" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="address" column="address" javaType="java.lang.String"
			jdbcType="VARCHAR" />
		<result property="type" column="type"
			javaType="java.lang.String" jdbcType="VARCHAR" />
	</resultMap>

<select id="login" resultMap="userMap">
	SELECT
		*
	FROM
		user
	<where>
		account=#{account}
		AND
		password=#{password}
	</where>
</select>

<select id="queryOne" resultMap="userMap">
	SELECT
		*
	FROM
		user
	<where>
		id=#{id}
	</where>
</select>
<select id="Query" resultMap="userMap" parameterType="java.util.HashMap">
	SELECT
		*
	FROM
		user
	<where>
		<if test="user.type!=null and user.type!=''">
			type=#{user.type}
		</if>
	</where>
	LIMIT 
	#{pager.offSet},#{pager.pageSize}
</select>
<select id="queryCount" resultType="int">
	SELECT
		COUNT(*)
	FROM
		user
	<where>
		<if test="user.type!=null and user.type!=''">
			type=#{user.type}
		</if>
	</where>
</select>

<insert id="userAdd">

	INSERT INTO
		user
	<trim prefix="(" suffix=")" suffixOverrides=",">
		<if test="account!=null and account!=''">
			account,
		</if>
		<if test="password!=null and password!=''">
			password,
		</if>
		<if test="tel!=null and tel!=''">
			tel,
		</if>
		<if test="address!=null and address!=''">
			address,
		</if>
		<if test="type!=null and type!=''">
			type,
		</if>
		<if test="email!=null and email!=''">
			email,
		</if>
	</trim>
	VALUES
	<trim prefix="(" suffix=")" suffixOverrides=",">
		<if test="account!=null and account!=''">
			#{account},
		</if>
		<if test="password!=null and password!=''">
			#{password},
		</if>
		<if test="tel!=null and tel!=''">
			#{tel},
		</if>
		<if test="address!=null and address!=''">
			#{address},
		</if>
		<if test="type!=null and type!=''">
			#{type},
		</if>
		<if test="email!=null and email!=''">
			#{email},
		</if>
	</trim>
	
</insert>

<delete id="informationDelete" parameterType="int">
		DELETE
		FROM
			user
		WHERE
			id=#{id}
</delete>

<update id="informationUpdate" parameterType="com.framework.rbac.user.model.User">
		UPDATE
		user
		<set>
			<if test="account!=null and account!=''">
				account=#{account},
			</if>
			<if test="password!=null and password!=''">
				password=#{password},
			</if>
			<if test="tel!=null and tel!=''">
				tel=#{tel},
			</if>
			<if test="address!=null and address!=''">
				address=#{address},
			</if>
			<if test="type!=null and type!=''">
				type=#{type},
			</if>
			<if test="email!=null and email!=''">
				email=#{email},
			</if>
		</set>
		WHERE id=#{id}
</update>
</mapper>